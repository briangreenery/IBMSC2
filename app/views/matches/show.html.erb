<div class="container">
  <div class="row" style="margin-top: 1em;">
    <div class="span12">
      <% if !@map.nil? %>
      <div class="match_map">
        <%= image_tag( '/images/maps/' + @map + '.jpg', :class => "thumbnail" ) %>
      </div>
      <% end %>
      <div class="match_info">
        <dl>
          <dt>Winner</dt>
          <dd>
            <%= link_to @match.winner.name, player_path( @match.winner ) %>
            <% if !@replay_info.nil? %>
            <%= image_tag( '/images/' + @replay_info["winner_race"].downcase + '_small.png' ) %>
            <% end %>
          </dd>
          <dt>Loser</dt>
          <dd>
            <%= link_to @match.loser.name, player_path( @match.loser ) %>
            <% if !@replay_info.nil? %>
            <%= image_tag( '/images/' + @replay_info["loser_race"].downcase + '_small.png' ) %>
            <% end %>
          </dd>
          <% if !@replay_info.nil? %>
          <dt>Map</dt>
          <dd><%= @replay_info["map"] %></dd>
          <dt>Length</dt>
          <dd><%= @replay_info["length"] %></dd>
          <% end %>
          <dt>Date</dt>
          <dd><%= @match.time.getlocal.strftime( "%b %d %l:%M %p" )%></dd>
        </dl>
        <% if !@match.replay_file.nil? %>
        <%= link_to( '/replays/' + @match.replay_file, :title => 'Download Replay', :class => "btn btn-success" ) do %>
        <i class="icon-arrow-down icon-white"></i> Download Replay
        <% end %>
        <%= link_to( match_path( @match ), :title => 'Delete Match', :class => "btn btn-danger confirm-delete", :method => :delete ) do %>
        <i class="icon-trash icon-white"></i> Delete Match
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal hide" id="confirm-modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="modal-title">Delete <%= @match.winner.name + ' vs ' + @match.loser.name %>?</h3>
  </div>
  <div class="modal-header">
    <p>Are you sure you want to delete this match?</p>
  </div>
  <div class="modal-footer">
    <button class="btn btn-danger" id="delete-button">Delete</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>

<%= form_tag '#', :style => "display:none", :id => "delete-form" do %>
<input type="hidden" name="_method" value="delete" />
<% end %>

<script>
  $('.confirm-delete').click(function(e) {
    e.preventDefault();

    var href = $(this).attr('href');
    $('#confirm-modal').data( 'href', href ).modal('show');
  });

  $('#delete-button').click(function(e) {
    $('#confirm-modal').modal('hide');
    var url = $('#confirm-modal').data( 'href' );
    $('#delete-form').attr( 'action', url );
    $('#delete-form').submit();
  });
</script>
