<%= form_for( @match, :html => { :class => 'form' } ) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation" class="alert alert-error alert-block">
      <h4>The match could not be saved</h4>
      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">Winner</label>
    <div class="controls"><%= collection_select :match, :winner_id, @players, :id, :name %></div>
  </div>
  <div class="control-group">
    <label class="control-label">Loser</label>
    <div class="controls"><%= collection_select :match, :loser_id, @players, :id, :name %></div>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
    <a href="/" class="btn">Cancel</a>
  </div>
<% end %>
