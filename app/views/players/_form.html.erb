<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field attr">
    <div class="attr_name"><%= f.label :name %></div>
    <%= f.text_field :name %>
  </div>
  <div class="field attr">
    <div class="attr_name"><%= f.label :character_code %></div>
    <%= f.text_field :character_code %>
  </div>
  <div class="field attr">
    <div class="attr_name"><%= f.label :league %></div>
    <%= f.select :league, [ ['--', nil], ['Master', 1], ['Diamond', 2], ['Platinum', 3], ['Gold', 4], ['Silver', 5], ['Bronze', 6] ] %>
  </div>
  <% if !@starting_points.nil? %>
  <div class="field attr">
    <div class="attr_name">Starting points</div>
    <%= text_field_tag 'points', @starting_points %>
  </div>
  <% end %>
  <div class="actions attr_save">
    <%= f.submit( ( @starting_points.nil? ? 'Save' : 'Create player' ), :class => 'button blue_button' ) %>
  </div>
<% end %>
