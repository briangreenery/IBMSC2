<%= form_for( @player ) do |f| %>
  <% if @player.errors.any? %>
    <div class="alert alert-error alert-block">
      <h4>The changes could not be saved</h4>
      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name %>
    <div class="controls"><%= f.text_field :name %></div>
  </div>
  <div class="control-group">
    <%= f.label :character_code %>
    <div class="controls"><%= f.text_field :character_code %></div>
  </div>
  <div class="control-group">
    <%= f.label :league %>
    <div class="controls">
      <%= f.select :league, [ ['--', nil], ['Master', 1], ['Diamond', 2], ['Platinum', 3], ['Gold', 4], ['Silver', 5], ['Bronze', 6] ] %>
    </div>
  </div>
  <div class="controls">
    <%= f.submit( ( @starting_points.nil? ? 'Save' : 'Create player' ), :class => 'btn btn-primary' ) %>
  </div>
<% end %>
